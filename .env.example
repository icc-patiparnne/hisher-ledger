# Environment Variables Example
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# Database Passwords
POSTGRES_PASSWORD=change-me-ledger-db-password
AUTH_POSTGRES_PASSWORD=change-me-auth-db-password

# Ledger Database Configuration (for local Docker use service names)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=ledger
POSTGRES_DB=ledger

# Auth Database Configuration (for local Docker use service names)
AUTH_POSTGRES_HOST=auth-postgres
AUTH_POSTGRES_PORT=5432
AUTH_POSTGRES_USER=auth
AUTH_POSTGRES_DB=auth

# Auth Service
AUTH_SIGNING_KEY=change-me-generate-with-openssl-rand-base64-32
AUTH_BASE_URL=http://auth:8080

# OAuth Client Secrets (should match auth-config.yml)
CONSOLE_CLIENT_ID=console
CONSOLE_CLIENT_SECRET=change-me-console-secret
LEDGER_CLIENT_ID=ledger
LEDGER_CLIENT_SECRET=change-me-ledger-secret

# Debug Mode (set to "true" for development)
DEBUG=false

# Console Settings
COOKIE_SECRET=change-me-cookie-secret
COOKIE_DOMAIN=localhost

# Database volumes (optional, uses named volumes by default)
# POSTGRES_DATA=/path/to/persistent/postgres/data
# AUTH_POSTGRES_DATA=/path/to/persistent/auth-postgres/data
