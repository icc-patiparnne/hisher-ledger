{
  "private": true,
  "packageManager": "pnpm@9.3.0",
  "name": "platform",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier \"**/*.{ts,tsx,md}\" --check --ignore-path .prettierignore",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md}\" --ignore-path .prettierignore",
    "qa": "pnpm run lint && pnpm run format && pnpm run typecheck",
    "storybook": "pnpm --filter storybook --",
    "portal": "pnpm --filter portal --",
    "feeder": "pnpm --filter feeder --",
    "numscript-playground": "pnpm --filter numscript-playground --",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/rds-signer": "^3.830.0",
    "@grpc/grpc-js": "^1.13.4",
    "@opentelemetry/auto-instrumentations-web": "^0.48.0",
    "@opentelemetry/context-zone": "^2.0.1",
    "@opentelemetry/core": "^2.0.1",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.53.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.202.0",
    "@opentelemetry/exporter-zipkin": "^1.30.1",
    "@opentelemetry/instrumentation": "^0.53.0",
    "@opentelemetry/instrumentation-http": "^0.53.0",
    "@opentelemetry/propagator-b3": "^2.0.1",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.53.0",
    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@opentelemetry/sdk-trace-node": "^1.30.1",
    "@sentry/react": "^8.55.0",
    "@uidotdev/usehooks": "^2.4.1",
    "axios": "^1.12.0",
    "compare-versions": "^6.1.1",
    "dayjs": "^1.11.18",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.5",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.522.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "react-hook-form": "^7.65.0",
    "remix-themes": "^1.6.1",
    "sonner": "^2.0.7",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@turbo/gen": "^1.13.4",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.32",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "prettier": "^2.8.8",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "vite": "^6.3.6"
  },
  "pnpm": {
    "overrides": {
      "d3-color@<3.1.0": ">=3.1.0",
      "esbuild@<=0.24.2": ">=0.25.0",
      "form-data@>=4.0.0 <4.0.4": ">=4.0.4",
      "on-headers@<1.1.0": ">=1.1.0",
      "tmp@<=0.2.3": ">=0.2.4"
    }
  }
}
